{
    "compileOnSave": true,
    "compilerOptions": {
        "outDir": "dist",
        "module": "none",
        "target": "es5",
        "lib": [ "es2015" ],
        "sourceMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "noImplicitAny": false,
        "baseUrl": ".",
        "rootDir": "."
    },
    "exclude": [
        "dist",
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
